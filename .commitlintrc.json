{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "subject-max-length": [2, "always", 100],
    "subject-min-length": [2, "always", 10],
    "subject-case": [2, "always", "sentence-case"]
  }
}
